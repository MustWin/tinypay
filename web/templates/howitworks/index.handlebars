{{> header }}

	<div class="section no-pad-bot" id="index-banner">
		<div class="container">
      <div class="row">
        <div class="col s10 push-s1">
          <ul class="tabs">
            {{#each tabs}}
              <li class="tab col s5"><a class="active" href="#{{id}}">{{tab_title}}</a></li>
            {{/each}}
          </ul>
        </div>
        {{#each tabs}}
          <div id="{{id}}" class="col s10">
            <h2>{{tab_title}}</h2>
						{{{lookup @root (lookup . "opener_content")}}}

						{{#each steps}}
              <section id="{{id}}">
                <h3><span class="step-indicator">{{inc @index}}</span> {{title}}</h3>
                <p>{{body}}</p>
								{{> (lookup . "partial") }}
              </section>
            {{/each}}

          </div>
        {{/each}}
      </div>

		</div>
	</div>

{{> footer }}
<script src="/js/installer.js"></script>
